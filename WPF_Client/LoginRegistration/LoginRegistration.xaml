<Window x:Class="WPF_Client.LoginRegistration.LoginRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client.LoginRegistration"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        Title="LoginRegistration" Height="500" Width="400">
    <DockPanel>
        <TabControl>
            <TabItem Header="Login">
                <StackPanel>
                    <TextBlock>Login</TextBlock>
                    <DockPanel LastChildFill="True">
                        <Border Height="10px" BorderThickness="999" DockPanel.Dock="Bottom" Margin="5"
                                Background="{Binding Path=LoginLine, UpdateSourceTrigger=PropertyChanged}"></Border>
                        <TextBox Text="{Binding Path=Login, UpdateSourceTrigger=PropertyChanged}">
                            
                        </TextBox>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Register">
                
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
