<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Шаблон елемента, який буде відображатися в UniformGrid -->
        <DataTemplate DataType="{x:Type local:ViewPoint}">
            <Border Margin="5" BorderThickness="1" BorderBrush="Black" Padding="5">
                <TextBlock Text="{Binding Path=Value, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
            </Border>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <DockPanel>
            
        <UniformGrid Columns="3" DockPanel.Dock="Bottom">
            <Button>Next Hint</Button>
            <Button>Slove up to</Button>
            <Button>Execute</Button>
            
        </UniformGrid>

        <Grid>
                <ItemsControl 
                    ItemsSource="{Binding Path=points, UpdateSourceTrigger=PropertyChanged}">
                <ItemsControl.ItemsPanel>
                    <!-- Використовуємо UniformGrid з 3 стовпцями -->
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="9" Rows="9"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>

        </DockPanel>
    </DockPanel>
</Window>
